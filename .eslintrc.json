{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "sourceType": "module",
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "globals": {
        "describe": "readonly",
        "test": "readonly",
        "expect": "readonly"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
